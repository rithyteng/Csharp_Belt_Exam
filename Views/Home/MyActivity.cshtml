<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <a href="/logout">Log Out</a>
    <a href="/Dashboard/@ViewBag.Id">Home</a>
    <h2>Create an Activity</h2>
    
    @model Act
    <form asp-action="Activities" asp-controller="Home" method="post">
        <span asp-validation-for="Title"></span>
        <label asp-for="Title"></label>
        <input asp-for="Title">
        <p></p>

        <span asp-validation-for="Time"></span>
        <label asp-for="Time"></label>
        <input asp-for="Time">
        <p></p>

        <span asp-validation-for="Duration"></span>
        <label asp-for="Duration"></label>
        <input asp-for="Duration">

        <select asp-for="Hours">
            <option value="Hours">Hours</option>
            <option value="Minutes">Minutes</option>
            <option value="Days">Days</option>
        </select>
        <p></p>

        <span asp-validation-for="Date"></span>
        <label asp-for="Date"></label>
        <input asp-for="Date">
        <p></p>

        <span asp-validation-for="ActivityDescription"></span>
        <label asp-for="ActivityDescription"></label>
        <input asp-for="ActivityDescription">
        <p></p>

        
        <button type="submit">Submit</button>
    </form>
</body>
</html>